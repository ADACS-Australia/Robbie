// input data lives here
params.input_dir = 'data/'
// Warping stage
params.warp = false
params.ref_catalogue = "master.fits"
params.refcat_ra = 'ra'
params.refcat_dec = 'dec'

// Source finding params
params.region_file = "$baseDir/square.mim"

// output directory
params.output_dir = 'results/'

process {
  publishDir = [path:params.output_dir, mode:'symlink', overwite:true]
  
  cpus = 1

  withLabel: 'aegean|bane|warp' {
  cpus = 4
  }

}